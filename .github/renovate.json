{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rebaseWhen": "conflicted",
  "addLabels": [
    "dependencies"
  ],
  "commitMessagePrefix": "⬆️",
  "customDatasources": {
    "vscode-cli": {
      "defaultRegistryUrlTemplate": "https://update.code.visualstudio.com/api/releases/stable",
      "format": "json",
      "transformTemplates": [
        "{ \"releases\": [ { \"version\": $[0] } ] }"
      ]
    }
  },
  "packageRules": [
    {
      "matchPackageNames": ["vscode-cli", "docker/cli", "mikefarah/yq"],
      "automerge": true
    },
    {
      "matchPackageNames": ["playit-cloud/playit-agent"],
      "allowedVersions": "/^v0\\./",
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^ghcr.io/home-assistant/[\\S]+-base-debian$"],
      "groupName": "Home Assistant Base Images",
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^ghcr.io/uplandjacob/ha-base-debian-java-[\\S]+$"],
      "groupName": "Home Assistant Base Java Images",
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/|\\.)([Dd]ocker|[Cc]ontainer)file$/",
        "/(^|/)([Dd]ocker|[Cc]ontainer)file[^/]*$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-zA-Z0-9-._]+?) depName=(?<depName>[^\\s]+?)(?: (lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?\\s(?:ENV|ARG)\\s+[A-Za-z0-9_]+?_VERSION[ =][\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)Dockerfile$/"
      ],
      "matchStrings": [
        "(?:apt(?:-get)?)\\s+.*?install[\\S\\s]*?(?<packagesAndVersions>(?:[a-z0-9.-]+=[^\\s]+(?:[\\s\\\\\\n])*)+)",
        "(?<depName>[a-z0-9-]+)=(?<currentValue>[^\\s]+)"
      ],
      "matchStringsStrategy": "combination",
      "datasourceTemplate": "repology",
      "versioningTemplate": "deb"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)Dockerfile$/",
        "/(^|/)build.yaml$/"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "\\s*(aarch64|amd64|armhf|armv7|i386):\\s*[\"']?(?<depName>.*?):(?<currentValue>[a-z]*-?[\\w\\.-]+?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^(?<compatibility>[a-z]+)?-?(?<major>\\d{1,4})\\.(?<minor>\\d{1,3})\\.(?<patch>\\d{1,3})$"
    }
  ]
}
